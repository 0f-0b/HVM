@main = x0
  // all ops
  & x0 ~ {n0 x1} & +10 ~ $([+]  $(+2 n0)) // 12
  & x1 ~ {n1 x2} & +10 ~ $([-]  $(+2 n1)) // 8
  & x2 ~ {n2 x3} & +10 ~ $([*]  $(+2 n2)) // 20
  & x3 ~ {n3 x4} & +10 ~ $([/]  $(+2 n3)) // 5
  & x4 ~ {n4 x5} & +10 ~ $([%]  $(+2 n4)) // 0
  & x5 ~ {n5 x6} & +10 ~ $([=]  $(+2 n5)) // 0
  & x6 ~ {n6 x7} & +10 ~ $([!]  $(+2 n6)) // 1
  & x7 ~ {n7 x8} & +10 ~ $([<]  $(+2 n7)) // 0
  & x8 ~ {n8 x9} & +10 ~ $([>]  $(+2 n8)) // 1
  & x9 ~ {n9 xA} & +10 ~ $([&]  $(+2 n9)) // 2
  & xA ~ {nA xB} & +10 ~ $([|]  $(+2 nA)) // 10
  & xB ~ {nB xC} & +10 ~ $([^]  $(+2 nB)) // 8
  
  // underflow
  & xC ~ {nC xD} & -8388608 ~ $([-] $(+1 nC)) // 8388607

  // overflow
  & xD ~ {nD xE} & +8388607 ~ $([+] $(+1 nD)) // -8388608

  // modulo
  & xE ~ {nE xF} & +3 ~ $([%] $(+2 nE)) // +1
  & xF ~ {nF xG} & +3 ~ $([%] $(-2 nF)) // +1
  & xG ~ {nG xH} & -3 ~ $([%] $(+2 nG)) // -1
  & xH ~ {nH xI} & -3 ~ $([%] $(-2 nH)) // -1

  & xI ~ *

